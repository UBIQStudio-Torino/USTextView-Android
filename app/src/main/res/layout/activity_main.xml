<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.ubiqstudio.ustextview.USTextView
        android:id="@+id/ciao"
        app:fontFamily="NewJune"
        app:fontFace="NewJune-Bold.otf"
        android:text="Ciao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USTextView
        android:id="@+id/mondo"
        app:fontFamily="NewJune"
        app:fontFace="NewJune-Book.otf"
        android:text="mondo"
        android:layout_toRightOf="@+id/ciao"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USTextView
        app:fontFamily="NewJune"
        app:fontFace="NewJune-Regular.otf"
        android:text="bellissimo"
        android:layout_toRightOf="@+id/mondo"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USTextView
        app:fontFamily="OpenSans"
        app:html="@string/ciao_mondo_bellissimo"
        android:layout_below="@+id/ciao"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
