<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.ubiqstudio.ustextview.USTextView
        android:id="@+id/ciao"
        app:usFontFamily="NewJune"
        app:usFontFace="NewJune-Bold.otf"
        android:text="Ciao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USTextView
        android:id="@+id/mondo"
        app:usFontFamily="NewJune"
        app:usFontFace="NewJune-Book.otf"
        android:text="mondo"
        android:layout_toRightOf="@+id/ciao"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USTextView
        app:usFontFamily="NewJune"
        app:usFontFace="NewJune-Regular.otf"
        android:text="bellissimo"
        android:layout_toRightOf="@+id/mondo"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USTextView
        android:id="@+id/html_test"
        app:usFontFamily="OpenSans"
        app:usHtml="@string/ciao_mondo_bellissimo"
        android:layout_below="@+id/ciao"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USEditText
        android:id="@+id/edit1"
        android:text="Edit 1"
        app:usPlaceholder="Placeholder 1"
        android:layout_below="@+id/html_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USEditText
        android:id="@+id/edit2"
        app:usHtml="Edit 2"
        app:usPlaceholder="Placeholder 2"
        android:layout_below="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.ubiqstudio.ustextview.USEditText
        app:usPlaceholder="Placeholder 3"
        android:layout_below="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
